{% extends 'base.html.twig' %}

{% block body %}


    <title> Ajouter Station </title>

    <div class="container col-lg-4 ">
        <form action="{{ path('ajoutstation') }}" method="POST" class="form-group">
            <div class="container">
                <div class="col-lg-8">
                    <label for="em">
                        <h3>Name :</h3>
                    </label>
                    <input class="form-control" name="name"  type="text" placeholder="Station1"  required>
                </div>
                <div class="col-lg-8">
                    <label for="ph">
                        <h3>Adresse :</h3>
                    </label>
                    <input class="form-control" name="adresse"  type="text"   placeholder="abc@def.com" required>
                    {#<span class="text-danger"><h3><?php if (isset($num_veh_error)) echo $num_veh_error; ?></h3></span>#}
                </div>
                <div class="col-lg-8">
                    <label for="em">
                        <h3>Nombre de place :</h3>
                    </label>
                    <input class="form-control" name="place"  type="Numbre" placeholder="5"  required>
                </div>
                <div class="col-lg-8">
                    <label for="em">
                        <h3>Pays :</h3>
                    </label>
                    <input class="form-control" name="pays"  type="text" placeholder="Tunis"   required>
                </div>
                <label for="em">
                    <h3>Image :</h3>
                </label>
                <input class="form-control" name="image"  type="file"   required>
            </div>
            <br><br>
            <div class="row">
                <div class="col-md-6 text-center">
                    <button class="btn btn-success" type="submit" >Enregistrer</button>
                </div>
                <div class="col-md-6 text-center">
                    <button  class="btn btn-danger" type="reset" >Annuler</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}