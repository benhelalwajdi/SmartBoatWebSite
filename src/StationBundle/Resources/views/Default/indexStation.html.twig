{% extends 'base.html.twig' %}

{% block body %}

<title> Station </title>
<body>

<header>
    <h1 class="titre1"> Liste des Station </h1>

</header>
<div class="container">
    <form action="{{ path('ajoutstationpage') }}"  method="post" class="form-group">
        <button class="btn btn-success " style="font-size:30px;" type="submit">
            <i>&#x2b;</i>
            Ajouter
        </button>
    </form>

    <br>
    <br>
    <table  class="table table-dark table-striped">

        <tbody>

        {% for station in st %}
            <tr style="height: 200px ; width: 300px">
                <th><img src="{{ asset(station.image) }}" class="img-thumbnail"  style="height: 300px;width: 300px"> </th>
                <th colspan="2"> ID :  <br><br>
                    Name : <br><br>
                    Adresse :<br><br>
                    Nombre de Place :<br><br>
                    Pays :<br><br>
                    <form action="#" method="post" class="form-group">{#{{ path('modifstationpage') }}#}

                        <button name="edit" value="{{ station.id }}" class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-cog"></i>
                            Modifier
                        </button>
                    </form>
                </th>
                <th colspan="2">
                    {{ station.id }}<br><br>
                    {{ station.name }}<br><br>
                    {{ station.adresse }}<br><br>
                    {{ station.nbrplace }}<br><br>
                    {{ station.pays }}<br><br>
                    <form action="{{ path('supprimerstation') }}" method="post" class="form-group">
                        <button name="delete" value="{{ station.id }}" class="btn btn-danger" type="submit">
                            <i class="fa fa-trash-alt"></i>
                            Supprimer
                        </button>
                    </form>


                </th>

            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
