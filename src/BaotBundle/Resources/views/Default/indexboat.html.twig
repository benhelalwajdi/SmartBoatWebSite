{% extends 'base.html.twig' %}

{% block body %}

<title> Bateau </title>
<body>

<header>
    <h1 class="titre1"> Liste des Bateaux </h1>

</header>
<div class="container">
    <form action="{{ path('ajoutboatpage') }}"  method="post" class="form-group">
        <button class="btn btn-success " style="font-size:30px;" type="submit">
            <i>&#x2b;</i>
            Ajouter
        </button>
    </form>

    <br>
    <br>
    <table  class="table table-dark table-striped">

        <tbody>
        {% for bateau in bt %}
            <tr style="height: 200px ; width: 300px">
                <th><img src="{{ asset(bateau.image) }}" class="img-thumbnail"  style="height: 300px;width: 300px"> </th>
                <th colspan="2"> ID :  <br><br>
                    Name : <br><br>
                    Numero :<br><br>
                    Longeur<br><br>
                    Largeur<br><br>
                    Place<br><br>
                    Specialite<br><br>
                    <form action="{{ path('modifboatpage') }}" method="post" class="form-group">

                        <button name="edit" value="{{ bateau.id }}" class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-cog"></i>
                            Modifier
                        </button>
                    </form>
                </th>
                <th colspan="2">
                    {{ bateau.id }}<br><br>
                    {{ bateau.name }}<br><br>
                    {{ bateau.numero }}<br><br>
                    {{ bateau.longeur }}<br><br>
                    {{ bateau.largeur }}<br><br>
                    {{ bateau.place }}<br><br>
                    {{ bateau.specialite }}<br><br>
                    <form action="{{ path('supprimerboat') }}" method="post" class="form-group">
                        <button name="delete" value="{{ bateau.id }}" class="btn btn-danger" type="submit">
                            <i class="fa fa-trash-alt"></i>
                            Supprimer
                        </button>
                    </form>


                </th>

            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>

{% endblock %}
